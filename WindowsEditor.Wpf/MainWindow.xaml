<Window x:Class="WindowsEditor.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WindowsEditor.Wpf.Converters"
        Title="{Binding Title}" Height="800" Width="800">
    <Window.Resources>
        <converters:ImageToSourceConverter x:Key="ImageToSourceConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="Assets/albelli.png" Width="130" HorizontalAlignment="Left"/>
        <Grid Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Left" Width="600">
            
        <StackPanel>
            <TextBlock Text="{Binding FilePath}"/>
            <Button Content="select file" Command="{Binding ButtonCommand}"></Button>
            <Image Width="600" Height="600" Source="{Binding Image, Converter={StaticResource ImageToSourceConverter}}"/>
            <Button Content="flip" Command="{Binding FlipCommand}"/>
             <Button Content="listen" Command="{Binding ListenCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
